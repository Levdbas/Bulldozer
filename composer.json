{
  "name": "highground/bulldozer",
  "description": "Framework for BasePlate based WordPress projects.",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/Levdbas/Bulldozer/",
  "authors": [
    {
      "name": "Erik van der Bas",
      "email": "erik@basedonline.nl"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2.0",
    "composer/installers": "^1.0 || ^2.0",
    "symfony/finder": "^7.0",
    "stoutlogic/acf-builder": "^1.12",
    "timber/timber": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "HighGround\\Bulldozer\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "require-dev": {
    "wp-coding-standards/wpcs": "^3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "phpunit/phpunit": "^9.0",
    "php-stubs/acf-pro-stubs": "^6.2",
    "phpstan/phpstan": "^1.7",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "brain/monkey": "^2",
    "oscarotero/env": "^2.1",
    "roots/wp-config": "1.0.0",
    "wpackagist-plugin/advanced-custom-fields": "^6.0",
    "yoast/wp-test-utils": "^1.2",
    "phpcompatibility/php-compatibility": "^9",
    "timber/teak": "^1.2",
    "automattic/wordbless": "^0.4.2"
  },
  "scripts": {
    "post-install-cmd": "WorDBless\\Composer\\InstallDropin::copy",
    "post-update-cmd": "WorDBless\\Composer\\InstallDropin::copy",
    "analyze": "phpstan analyse --memory-limit=1G",
    "lint:fix": "@php ./vendor/bin/phpcbf --standard=phpcs.xml.dist --extensions=php --colors -s -p -v ./",
    "lint": "@php ./vendor/bin/phpcs --standard=phpcs.xml.dist --extensions=php --colors -s -p -v ./",
    "test": "@php ./vendor/bin/phpunit",
    "sniffer:php8": "@php ./vendor/bin/phpcs -p ./includes --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.1",
    "docs:classes": "vendor/bin/teak generate:class-reference ./src/ --output ./docs/reference",
    "docs:filters": "vendor/bin/teak generate:hook-reference ./src/ --output ./docs/hooks --hook_type=filter",
    "docs:actions": "vendor/bin/teak generate:hook-reference ./src/ --output ./docs/hooks --hook_type=action",
    "docs:all": "composer run docs:classes && composer run docs:filters && composer run docs:actions"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  }
}